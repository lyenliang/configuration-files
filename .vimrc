filetype plugin on
syntax on

colorscheme bclear
" this color shceme is downloaded from
" https://github.com/flazz/vim-colorschemes/blob/master/colors/bclear.vim
filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
