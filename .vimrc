filetype plugin on
syntax on

colorscheme bclear
" this color shceme is downloaded from
" https://github.com/flazz/vim-colorschemes/blob/master/colors/bclear.vim
filetype plugin indent on
" show existing tab with 2 spaces width
set tabstop=2

" when indenting with '>', use 2 spaces width
set shiftwidth=2

" On pressing tab, insert 2 spaces
set expandtab
